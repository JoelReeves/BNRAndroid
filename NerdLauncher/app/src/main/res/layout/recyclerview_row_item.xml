<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    style="@style/MatchWidthWrapHeight">

    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="@dimen/appimage_width"
        android:layout_height="@dimen/appimage_height"/>

    <TextView
        android:id="@+id/tv_app_name"
        style="@style/WrapContent"
        android:layout_marginLeft="@dimen/appname_marginLeft"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/appname_textSize"
        tools:text="App Name"/>

</LinearLayout>